<%- include('../partials/head') %>
  </head>

  <body class="bg-gray-50">
    <%- include('../partials/nav') %>

      <main class="container mx-auto mt-10 p-6 bg-white rounded-2xl shadow-xl max-w-2xl">
        <h1 class="text-3xl font-extrabold mb-8 text-center text-gray-800">
          <%= editing ? "Edit" : "Add" %> Your Recipe
        </h1>

        <form action="/host/<%= editing ? 'edit-home' : 'add-home' %>" method="POST" class="space-y-6">
          <input type="hidden" name="id" value="<%= editing && home ? home._id : '' %>" />

          <!-- Recipe Name -->
          <div>
            <label class="block text-gray-700 font-medium mb-2">Recipe Name</label>
            <input type="text" name="houseName" value="<%= editing && home ? home.houseName : '' %>"
              placeholder="Ex: Margherita Pizza"
              class="w-full px-5 py-3 border rounded-xl focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-green-300 shadow-sm"
              required />
          </div>

          <!-- Ingredients -->
          <div>
            <label class="block text-gray-700 font-medium mb-2">Ingredients/Price</label>
            <input type="text" name="price" value="<%= editing && home ? home.price : '' %>"
              placeholder="Price Per Night"
              class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
              required />

          </div>

          <!-- Cooking Time -->
          <div>
            <label class="block text-gray-700 font-medium mb-2">Cooking Time</label>
            <input type="text" name="location" value="<%= editing && home ? home.location : '' %>"
              placeholder="Ex: 30 mins"
              class="w-full px-5 py-3 border rounded-xl focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-orange-300 shadow-sm"
              required />
          </div>

          <!-- Rating / Difficulty -->
          <div>

            <label class="block text-gray-700 font-medium mb-2">Difficulty / Rating</label>
            <input type="text" name="rating" value="<%= editing && home ? home.rating : '' %>"
              placeholder="Ex: Easy / 4.5 stars"
              class="w-full px-5 py-3 border rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-purple-300 shadow-sm" />
          </div>

          <!-- Image URL -->
          <div>
            <label class="block text-gray-700 font-medium mb-2">Image URL</label>
            <input type="text" name="imageUrl" value="<%= editing && home ? home.imageUrl : '' %>"
              placeholder="Ex: https://images.unsplash.com/photo-..."
              class="w-full px-5 py-3 border rounded-xl focus:outline-none focus:ring-2 focus:ring-pink-400 focus:border-pink-300 shadow-sm"
              required />
          </div>

          <!-- Description -->
          <div>
            <label class="block text-gray-700 font-medium mb-2">Description</label>
            <textarea name="description" rows="4" placeholder="Describe your recipe in detail"
              class="w-full px-5 py-3 border rounded-xl focus:outline-none focus:ring-2 focus:ring-red-400 focus:border-red-300 shadow-sm"
              required><%= editing && home ? home.description : '' %></textarea>
          </div>

          <!-- Submit Button -->
          <button type="submit"
            class="w-full bg-gradient-to-r from-green-400 to-green-500 text-white py-3 rounded-xl font-semibold hover:from-green-500 hover:to-green-600 transition duration-300 shadow-md">
            <%= editing ? 'Update Recipe' : 'Add Recipe' %>
          </button>
        </form>
      </main>
  </body>

  </html>