<%- include('../partials/head') %>
  </head>

  <body>
    <%- include('../partials/nav') %>
      <main class="container mx-auto mt-32 px-4 max-w-7xl">
        <h2 class="text-4xl text-rose-500 font-extrabold text-center mb-12">
          Our Recipes
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 justify-items-center">
          <% registeredHomes.forEach(home=> { %>
            <div class="bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl 
                    hover:-translate-y-2 transform transition duration-300 w-full max-w-xs">
              <img src="<%= home.imageUrl %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover">
              <div class="p-4">
                <h3 class="text-xl font-semibold text-gray-800 mb-2">
                  <%= home.houseName %>
                </h3>
                <p class="text-gray-600 mb-2"><i class="fas fa-map-marker-alt mr-2"></i>
                  <%= home.location %>
                </p>
                <div class="flex justify-between items-center mb-2">
                  <span class="text-lg font-bold text-red-500">Rs<%= home.price %> / Recipe</span>
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                      class="w-5 h-5 text-yellow-400 mr-1">
                      <path fill-rule="evenodd"
                        d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"
                        clip-rule="evenodd" />
                    </svg>
                    <span class="text-gray-700">
                      <%= home.rating %>
                    </span>
                  </div>
                </div>
                <button class="bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-semibold 
                                py-2 rounded-xl transition shadow-sm px-10">
                  Book
                  </button>
                  
              </div>
            </div>
            <% }) %>
        </div>
      </main>
  </body>

  </html>