<%- include('../partials/head') %>
</head>

<body class="bg-gray-50">
  <%- include('../partials/nav') %>

  <main class="container mx-auto bg-white shadow-2xl rounded-3xl p-10 mt-10 max-w-6xl">
    <h2 class="text-4xl text-red-500 font-extrabold text-center mb-10">
      <%= home.houseName %>
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
      
      <!-- Image Section -->
      <div class="rounded-2xl overflow-hidden shadow-lg hover:scale-105 transform transition duration-300">
        <img src="<%= home.imageUrl %>" alt="<%= home.houseName %>" class="w-full h-96 object-cover">
      </div>

      <!-- Details Section -->
      <div class="space-y-8">
        <!-- Description -->
        <div class="border-b pb-4">
          <h3 class="text-2xl font-semibold mb-2 text-gray-800">Description</h3>
          <p class="text-gray-600 text-lg"><%= home.description %></p>
        </div>

        <!-- Location -->
        <div class="border-b pb-4">
          <h3 class="text-2xl font-semibold mb-2 text-gray-800">Location</h3>
          <p class="text-gray-600 text-lg"><%= home.location %></p>
        </div>

        <!-- Price -->
        <div class="border-b pb-4">
          <h3 class="text-2xl font-semibold mb-2 text-gray-800">Price</h3>
          <p class="text-green-600 text-2xl font-bold">$<%= home.price %> / Recipe</p>
        </div>

        <!-- Rating -->
        <div class="border-b pb-4">
          <h3 class="text-2xl font-semibold mb-2 text-gray-800">Rating</h3>
          <div class="flex items-center">
            <span class="text-yellow-400 text-2xl">â˜…</span>
            <span class="ml-3 text-lg font-medium text-gray-700"><%= home.rating %> / 5</span>
          </div>
        </div>

        <!-- Favourite Button -->
        <div class="mt-4">
          <%- include('../partials/favourite') %>
        </div>
      </div>
    </div>
  </main>
</body>
</html>
