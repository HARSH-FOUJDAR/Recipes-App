<%- include('../partials/head') %>
  </head>

  <body class="bg-gray-100">

    <!-- FIXED NAVBAR -->
    <header class="fixed top-0 left-0 w-full bg-white/90 backdrop-blur-md border-b shadow-sm z-50">
      <%- include('../partials/nav') %>
    </header>


    <!-- MAIN CONTENT -->
    <main class="container mx-auto mt-32 px-4 max-w-7xl">
      
     <h2 class="text-4xl text-rose-500 font-extrabold text-center mb-12">
      Here are our registered Recipes
    </h2>

        <!-- CARDS GRID -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 justify-items-center">


        <% registeredHomes.forEach(home=> { %>

            <div class="bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl 
                    hover:-translate-y-2 transform transition duration-300 w-full max-w-xs">


            <!-- Image -->
            <div class="relative">
              <img src="<%= home.imageUrl %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover" />

              <!-- Rating badge -->
              <span class="absolute top-3 right-3 bg-white px-3 py-1 rounded-full 
                     text-sm font-semibold shadow flex items-center gap-1">
                ⭐ <%= home.rating %>
              </span>
            </div>

            <!-- Content -->
            <div class="p-5">
              <h3 class="text-lg font-semibold text-gray-800 mb-1 truncate">
                <%= home.houseName %>
              </h3>

              <p class="text-sm text-gray-500 mb-3 truncate">
                <%= home.location %>
              </p>

              <!-- Price + CTA -->

              <span class="text-lg font-bold text-gray-900">
                ₹<%= home.price %>
                  <span class="text-sm font-normal text-gray-500">/ Recipe</span>
              </span>
            <div class="flex justify-between items-center mt-5">
              <a href="/homes/<%= home._id %>" class="bg-yellow-400 hover:bg-yellow-500 text-black 
                 text-sm font-semibold px-4 py-2 rounded-xl transition shadow-sm">
                View Details
              </a>

              <form action="/favourites" method="POST">
                <input type="hidden" name="homeId" value="<%= home._id %>">
                <button class="bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-semibold 
                               px-4 py-2 rounded-xl transition shadow-sm">
                  Add Favourite
                </button>
              </form>
            </div>
            </div>


          </div>

          <% }) %>
      </div>
    </main>

  </body>

  </html>